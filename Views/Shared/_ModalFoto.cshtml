@model YURent.Models.UtilizadorModel

<div id="uploadModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-body">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <br />
                <h4 class="text-center">Trocar de Imagem</h4>
                <br />
                <!-- Form -->
                <form method="post" enctype="multipart/form-data" asp-action="EditarFoto" asp-controller="Perfil">
                    <div class="custom-file">
                        <input asp-for="ImagemPerfil" class="custom-file-input" id="validatedCustomFile" accept=".png, .jpg, .jpeg">
                        <label class="custom-file-label" for="validatedCustomFile">Escolhe uma Imagem...</label>
                        <span asp-validation-for="ImagemPerfil"></span>
                    </div>
                    <div class="form-group mt-3 text-center">
                        <input type="submit" value="Guardar Imagem" class="btn btn-orange text-white" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>