@model YURent.Models.UtilizadorModel

@{
    ViewData["Title"] = "Nome";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-xl-9 col-md-8 col-12">
            <h4 class="display-4 text-center">Escolhe o teu nome!</h4>
            <form method="post" asp-controller="Home" asp-action="CriarUtilizador">
                <div class="form-group">
                    <label asp-for="Nome"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Gravar Dados" class="btn btn-orange text-white" />
                </div>
            </form>
        </div>
    </div>
</div>