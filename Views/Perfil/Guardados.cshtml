@model IEnumerable<YURent.Models.GuardadosModel>

@{
    ViewData["Title"] = "Guardados";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            @if (Model != null)
            {
                @foreach (var anuncio in Model)
                {
                    <div class="col-12 shadow p-2 mt-3 d-flex justify-content-between">
                        <div class="d-flex">
                            <a asp-controller="Anuncios" asp-action="Anuncio" asp-route-id="@anuncio.Anuncios.Id_anuncio">
                                <img src="@anuncio.Anuncios.UrlImagem" id="imagem-anuncio" />
                            </a>
                            <div class="d-block ml-2 align-self-center">
                                <h3 class="text-black">@anuncio.Anuncios.Título</h3>
                                <h6 class="text-black">@anuncio.Anuncios.Descricao</h6>
                                <div class="d-flex mt-4">
                                    <i class="fas fa-money-bill icon-orange"></i><p class="ml-1"> @anuncio.Anuncios.Preco_dia €</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <h1 class="display-1 my-5 py-5">Não tem nenhum anûncio guardado</h1>
            }
        </div>
    </div>
</div>


