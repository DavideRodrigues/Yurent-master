@model YURent.Models.UtilizadorModel

@{
    ViewData["Title"] = "Conta";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-xl-3 col-md-4 col-12 text-center">
            <div class="shadow menu-editar">
                <div class="container-perfil mb-3">
                    @if(@Model.UrlImagemPerfil != null)
                    {
                        <img class="avatar-perfil" src="@Model.UrlImagemPerfil" />
                    }
                    else
                    {
                        <img class="avatar-perfil" src="~/images/imagem_perfil" />
                    }

                    <div class="overlay">
                        <a class="icon" title="Editar Imagem" data-toggle="modal" data-target="#uploadModal">
                            <i class="fas fa-camera"></i>
                        </a>
                    </div>
                </div>
                <br />
                <a class="orange" asp-action="GerirConta" asp-controller="Perfil">Conta</a>
                <br />
                <a class="link-black" asp-action="GerirFaturacao" asp-controller="Perfil">Faturação</a>
                <br />
                <a class="link-black" asp-action="GerirVerificacao" asp-controller="Perfil">Verificação</a>
            </div>
        </div>

        <div class="col-xl-9 col-md-8 col-12">
            <h4 class="display-4 text-center">Conta</h4>
            <form method="post" asp-action="GerirConta">
                <div class="form-group">
                    <label asp-for="Nome"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descricao "></label>
                    <input asp-for="Descricao" class="form-control" />
                    <span asp-validation-for="Descricao"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Gravar Dados" class="btn btn-orange text-white" />
                </div>
            </form>
        </div>
        @await Html.PartialAsync("_ModalFoto")
    </div>
</div>